{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint-staged": {},
    "stylelint": {},
    "format": {},
    "lint": {},
    "deploy": {
      "dependsOn": ["build", "format", "stylelint", "lint", "prettier"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
